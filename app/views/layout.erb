<!-- yield views -->
<!doctype html>
<html>
  <head>
    <link href="https://fonts.googleapis.com/css?family=Work+Sans:100,200,300,400,500,600,700,800,900" rel="stylesheet">
    <style>

      body {
        font-family: 'Work Sans', sans-serif;
        font-size: 16px;
        line-height: 1.5;
        background-color: rgb(244, 249, 250);
        color: #0A2239;
        margin: 0;
      }
      .user-form {
        color: #000;
        margin-top: 20px;
        margin-left: auto;
        margin-right: auto;
        text-align: center;
        padding: 10px;
      }
      .user-form input {
        border: 0.5px solid #0A2239;
        border-radius: 4px;
        padding: 15px;
        margin-top: 10px;
        width: 260px;
      }
      .user-form button {
        width: 290px;
        padding: 15px;
        border-radius: 4px;
        background-color: rgb(100, 220, 145);
        margin-top: 20px;
      }
      a {
        text-decoration: none;
        color: #0A2239;
      }
      header {
         width: 100%;
         background-color: #fff;
         padding-top: 20px;
         padding-bottom: 20px;
         border-bottom: 0.1px solid #101D42;
         overflow: hidden;
      }
      nav {
        float: right;
        margin-top: 6px;
      }
      nav a {
        margin-right: 20px;
      }
      h1 {
         font-size: 24px;
         font-weight: 700;
         margin: 0;
         float: left;
         padding: 0;
         margin-left:40px;
      }
      h2 {
         font-size: 20px;
      }
      button {
        background-color: #ABD0CE;
        padding: 10px;
        margin: 5px;
        border-radius: 4px;
        width: 100px;
        text-align: center;
      }
    </style>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
