<!doctype html>
<html>
  <head>
    <title>Golaso Home </title>
    <style>

      header {
        width: 100%;
        background-color: #fff;
        padding: 20px;
        border-bottom: 0.1px solid #101D42;
      }
      h1 {
        font-size: 24px;
        font-weight: 700;
        margin: 0
      }
      h2 {
        font-size: 20px;
      }
      .user-form {
        color: #000;
        max-width: 520px;
        margin-top: 20px;
        margin-left: auto;
        margin-right: auto;
        text-align: center;
        padding: 10px;
      }
      .user-form input {
        border: 0.5px solid #0A2239;
        border-radius: 4px;
        padding: 15px;
        margin-top: 10px;
        width: 260px;
      }
      .user-form button {
        width: 290px;
        padding: 15px;
        border-radius: 4px;
        background-color: rgb(100, 220, 145);
      }

    </style>
  </head>

  <body>
    <header>
      <h1>GOAL</h1>
    </header>

    <!-- Login -->
    <section class="user-form">
      <h2> Hey, good to see you again! </h2>
      <p>Log-in to your account</p>
      <form method="POST" action="/login">
        <input type="text" name="user[username]" placeholder="Username"><br>
        <input type="password" name="user[password]" placeholder="Password"><br><br>
        <button type="submit">Log In</button>
      </form>

      <p>Or</p>

      <!-- Sign up -->

      <form method="get" action="/signup">
        <button type="submit"> Sign Up</button>
      </form>
    </section>
  </body>
</html>
