<html>
<head>
  <title>Feed</title>
  <style>
    .hero {
      padding: 40px;
    }
    .user-feed p {
      margin-left: 20px;
    }
    .title {
      font-weight: 600;
    }
    .content {
      margin-left: 20px;
    }
    .user-feed {
      border-bottom: 1px solid #ABD0CE;
    }
    h3 {
      text-align: center;
    }
  </style>
</head>


  <header>
    <a href ="/home"><h1>GOAL</h1></a>
    <nav>
      <a href="/home">Home</a>
      <a href="/feed">Feed</a>
      <a href="/resources">Resources</a>
      <a href="/logout">Log Out</a>
    </nav>
  </header>
  <body>
    <section class="hero">
      <% if Goal.all.empty? %>
        <h3> The Feed is currently empty. </h3>
        <form class= "user-form" method="get" action='/create-goal'>
          <button type="submit">Create Goal</button>
        </form>
      <% else %>
        <% @users.each do |user| %>
          <% if !user.goals.empty? %>
            <div class="user-feed">
              <h4> @<%= user.username %>:</h4>
              <% user.goals.each_with_index do |goal, index| %>
                <div class="title"><p>Goal #<%=index+1%>: <%=goal.title%></p></div>
                <div class="content"><p><%= goal.description %> by <%= goal.dateify %></p></div>
              <% end %>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </section>
  </body>
</html>
